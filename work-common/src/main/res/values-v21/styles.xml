<resources>

    <style name="activity_style" parent="Base.Activity.Style">
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:colorPrimary">@color/theme_primary</item>
        <item name="android:colorAccent">@color/theme_blue</item>
        <item name="android:colorControlNormal">@color/text_black</item>
        <item name="android:actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:colorControlActivated">@color/theme_blue</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>


    <style name="Translucent_statusbar_Theme" parent="activity_style">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Main.Activity.Theme" parent="activity_style">
        <item name="android:colorPrimaryDark">@color/theme_primary</item>
    </style>

    <style name="Login.Activity.Theme" parent="activity_style">
        <item name="android:colorPrimaryDark">@color/theme_primary</item>
        <item name="android:colorPrimary">@color/theme_primary</item>
        <item name="android:colorAccent">@color/theme_blue</item>
        <item name="android:colorControlNormal">@color/theme_blue</item>
    </style>

    <style name="LoginEditTextStyle" >
        <item name="colorAccent">#3498db</item>
        <item name="android:colorControlNormal">@color/divider_color</item>
        <item name="android:textColorHint">@color/btn_gray_normal</item>
        <item name="android:colorControlActivated">@color/theme_blue</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>


    <style name="Activity.Dialog" parent="Base.Activity.Dialog">
        <item name="android:colorControlActivated">@color/theme_blue</item>
        <item name="android:colorAccent">@color/theme_blue</item>
        <item name="android:colorControlNormal">@color/text_black</item>
    </style>

</resources>