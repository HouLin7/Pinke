<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="thin_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="thin_divider_marginleft16" parent="thin_divider">
        <item name="android:layout_marginLeft">16dip</item>
    </style>

    <style name="thin_vertical_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <!--pickerUi style-->
    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationPicker</item>
    </style>

    <style name="AnimationPicker" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--switchButton 使用样式-->


    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ChatInfoTextTips">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.Activity.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:animationDuration">0</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Activity.Dialog" parent="Base.Activity.Dialog"/>

    <style name="MyCustomTabTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CollapsedToolbarLayoutTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ExpandedToolbarLayoutExpandTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="MySpinnerTextAppearance" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="style_guide_activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="anim_menu_bottom_pop">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <style name="Translucent_statusbar_Theme" parent="activity_style"/>

    <!-- 设置全屏-->
    <style name="NoActionBar.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 设置全屏-->
    <style name="NoActionBar.Fullscreen.Transparent" parent="NoActionBar.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- 广告页主题-->
    <style name="AD_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MenuTextStyle" parent="@style/TextAppearance.AppCompat.Menu">">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/theme_green</item>
    </style>

    <style name="activity_style" parent="Base.Activity.Style">

    </style>

    <style name="System.Dialog.activity" parent="activity_style">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Base.Activity.Style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:dropDownSpinnerStyle">@style/SpinnerStyle</item>
        <item name="android:textColorPrimary">@color/app_black_light</item>
    </style>

    <style name="MyToolbar.transparent" parent="MyToolbar">
        <item name="android:background">@color/transparent</item>
        <item name="contentInsetLeft">14dp</item>
        <item name="contentInsetStart">14dp</item>
        <item name="contentInsetRight">14dp</item>
        <item name="contentInsetEnd">14dp</item>
        <!--<item name="titleMargin">0dp</item>-->
    </style>

    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/theme_primary</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">14dp</item>
        <item name="contentInsetEnd">14dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionMenuTextColor">@color/app_red</item>
    </style>

    <style name="MyToolbar.PopupTheme" parent="Widget.AppCompat.PopupMenu">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">

    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/app_red</item>
        <item name="barLength">28dp</item>
        <item name="gapBetweenBars">3dp</item>
        <item name="drawableSize">50dp</item>
        <item name="spinBars">true</item>
        <item name="thickness">2dp</item>
        <item name="arrowShaftLength">20dp</item>
        <item name="arrowHeadLength">8dp</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/title_name_color</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>


    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>


    <style name="Main.Activity.Theme" parent="activity_style"/>


    <style name="menu_labels_style">
        <item name="android:textColor">@color/app_gray_light</item>
    </style>

    <style name="checkbox_style" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/app_red</item>
    </style>


    <style name="Login.Activity.Theme" parent="activity_style"/>
</resources>